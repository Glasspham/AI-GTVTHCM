@model BookShoppingCartMvcUI.Models.ViewModels.Recommendation.PersonalRecommendVM


@if (Model == null)
{
    <p class="text-muted">No data.</p>
    return;
}

<p>
    <strong>Strategy:</strong>
    <span class="badge bg-info text-dark">@Model.Strategy</span>
</p>

<p>
    <strong>Reason:</strong> @Model.Reason
</p>

<p>
    <strong>User type:</strong>
    <span class="badge bg-secondary">@Model.Profile.UserType</span>
    —
    <small>@Model.Profile.TotalInteractions interactions</small>
</p>

<table class="table table-sm table-striped">
    <thead>
        <tr>
            <th>Thứ tự</th>
            <th>Sách</th>
            <th>Điểm</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
        }
        @foreach (var r in Model.Recommendations)
        {
            <tr>
                <td>@i</td>
                <td>@r.BookId</td>
                <td>@r.Score.ToString("0.###")</td>
            </tr>
            i++;
        }
    </tbody>
</table>
